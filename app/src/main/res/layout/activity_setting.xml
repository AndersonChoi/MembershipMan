<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/setting_line"
        android:layout_centerInParent="true"
        android:src="#00ffffff"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/setting_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_margin="60dp"
        android:layout_above="@id/setting_line"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/setting_line"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">


        <com.hanks.htextview.HTextView xmlns:htext="http://schemas.android.com/apk/res-auto"
            android:id="@+id/htext_logo1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="40dp"
            htext:animateType="anvil" />


        <com.hanks.htextview.HTextView xmlns:htext="http://schemas.android.com/apk/res-auto"
            android:id="@+id/htext_logo2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="24dp"
            htext:animateType="line" />



        <com.hanks.htextview.HTextView xmlns:htext="http://schemas.android.com/apk/res-auto"
            android:id="@+id/htext_logo4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="24dp"
            htext:animateType="line" />

        <com.hanks.htextview.HTextView xmlns:htext="http://schemas.android.com/apk/res-auto"
            android:id="@+id/htext_logo3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="24dp"
            htext:animateType="line" />


    </LinearLayout>


</RelativeLayout>
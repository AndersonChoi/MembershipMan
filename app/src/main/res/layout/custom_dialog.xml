<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="10dip">


    <Button
        android:id="@+id/share_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00ffffff"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/share_button"
        android:scaleType="fitCenter" />


    <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#00ffffff"
        android:scaleType="center"
        app:materialIcon="share_variant"
        app:materialIconColor="#000"
        app:materialIconSize="40dp" />



    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#00ffffff"
        android:layout_margin="5dp"
        android:src="#00ffffff"
        app:riv_border_color="#000"
        app:riv_border_width="2dp"
        app:riv_corner_radius="2dp"
        app:riv_mutate_background="true"
        app:riv_oval="false" />




</RelativeLayout>